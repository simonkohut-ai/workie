{
  "version": 2,
  "builds": [
    {
      "src": "aos-service/server.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["aos-service/**"] }
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/aos-service/server.js" },
    { "source": "/(.*)", "destination": "/client/$1" }
  ]
}
